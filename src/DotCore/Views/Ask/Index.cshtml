@using DotCore.Portable.BusinessLogic.Models
@model DotCore.Portable.BusinessLogic.Models.AskQuestionModel

@{
    ViewData["Title"] = "Ask";
}

@section links{
    <link href="http://cdn.syncfusion.com/13.4.0.53/js/web/flat-azure/ej.web.all.min.css" rel="stylesheet" />
}

<article class="container main-container">
    <form method="POST" asp-controller="Ask" asp-action="Ask" class="d-flex flex-column">
        <h1 class="mb-3">Get answer from .Core community</h1>
        <div class="input-group">
            <label>Title</label>
            <input type="text" class="row-control" autofocus required asp-for="Title"/>
            <span asp-validation-for="Title" class="text-danger d-block mt-2"></span>
        </div>

        <div class="input">
            <span>Description</span>
            <textarea id="question" class="collapsed"></textarea>
        </div>
    
        <input id="#content" type="hidden" asp-for="Description"/>
    
        <button class="btn primary-btn ml-auto my-3" onclick="setContent()">Submit</button>
    </form>
</article>

@section scripts{
<script src="http://cdn.syncfusion.com/js/assets/external/jquery-1.11.3.min.js" type="text/javascript"></script>
<script src="http://cdn.syncfusion.com/js/assets/external/jquery.easing.1.3.min.js"></script>
<script src="http://cdn.syncfusion.com/13.4.0.53/js/web/ej.web.all.min.js"></script>
<script>
    function setContent() {
        document.getElementById('#content').value = encodeURI($("#question").ejRTE("model.value"));
    }

   $(function () {
                    $("#question").ejRTE({ width: "100%", isResponsive: true, enableXHTML: true, length: 5000, minWidth: 200, height: 280, value: decodeURI("@Model.Description") });
                });
</script>
}